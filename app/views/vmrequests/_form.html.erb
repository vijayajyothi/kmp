<div class ="container" style="width:85%;">
  <!-- Index form Started -->
  <div class="col-sm-12">
    <div class="form-search col-sm-4">
      <h3>New Idea </h3></div>
     
    </div>

<%= form_for(@vmrequest, remote: true) do |f| %>
  
<fieldset class="formfield">
<%= link_to 'Back', vmrequests_path, :remote=>true %>
 <p style="width:95%;">
    <label>Title*</label>
    <%= f.text_field :name %>
  </p>

  <p>
    <label> Owner</label>
    <%= f.text_field :owner %>
  </p>


  <p style="width:95%;">
  <label>Abstract</label>
    <%= f.text_area:comments, :rows=>6,:columns=>5 %>
  </p>
   
  <p style="width:95%;">
  <label>Problem Description</label>
    <%= f.text_area:prob_desc, :rows=>4,:columns=>5 %>
  </p>
   <p style="width:95%;">
  <label>Solution</label>
    <%= f.text_area:solution, :rows=>5,:columns=>5 %>
  </p> 
   <p style="width:95%;">
  <label>Advantages</label>
    <%= f.text_area:adv, :rows=>5,:columns=>5 %>
  </p>
   <p style="width:95%;">
  <label>Proposal</label>
    <%= f.text_area:proposal, :rows=>6,:columns=>5 %>
  </p>
   <p>
  <label>References</label>
    <%= f.text_area:references, :rows=>4,:columns=>5 %>
  </p>
   <p>
  <label>Approved</label>
    <%= f.check_box:approval, :checked_value=> "1", :unchecked_value =>"0", :style=>"margin-top:10px;" %>
  </p>
   <p>
    <label>Date</label>
    <%= f.date_select :requested_date, :style=>"width:100px;", :value =>Date.today %>
  </p>

   <p>  <%= f.submit :class=>"btn btn-primary", :value=>"Create Idea", :remote=>true, :style=>"float:right;"%></p>
<% end %>
</fieldset>

<p>

<script>
$('document').ready(function(){
 $("form").submit(function(){
    $('input[type=submit]').attr('disabled', 'disabled');
  });

});
</script>

