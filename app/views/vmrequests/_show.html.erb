    </div>
<p id="notice"><%= notice %></p>
<fieldset class="formfield">
 <p style="font-size:14px;">
    <label> Name</label>
  <%= @vmrequest.name %>
</p>

<p style="font-size:14px;">
  <label>Environment:</label>
  <%= @vmrequest.environment %>
</p>

<p style="font-size:14px;">
  <label>Requester:</label>
  <%= @vmrequest.requester %>
</p>
