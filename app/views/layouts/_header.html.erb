<header style="height:12% !important;border-bottom:2px solid black;">


  <div class="container" style="border:0px #900 solid">

    <div class="row">
      <% if @current_user.present? %>

      <div class="col-sm-4" style="padding-top:10px;">
        <div class="logo"> 
          <%= link_to (image_tag("vm-logo.jpg")), "/", :id => "logo", :title=>"Back to Home", :style=>"width:35%;margin:0px !important" %>
        </div>
        </div>

 <div class="form-search col-sm-4" style="margin-top:20px;">
        <div class="input-append">

          <%= form_tag search_list_path, :method => :get, :remote=> true do %>
          <%= text_field_tag :search, params[:search],:class=>"span2 search-query" ,:style=>"height:31px;border-radius:14px 0 0 14px; margin-right:-10px;", :placeholder =>"Search Inventory"%>
          <%= submit_tag "Search", :name => nil, :class=>"btn", :style=>"height:32px; border-radius:0 14px 14px 0;" %>
          <% end %>
        </div>
      </div>

    </div>

      <div class="col-sm-5" align="right" style=" float:right">

        <!--Navigation Starts -->
        <nav class="navbar navbar-default" role="navigation">
          <div class="container-fluid" style="padding:0px !important;">
            <!-- Menu and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
               <img src="/assets/menu.png">
             </button>
           </div>
           <!-- Collect the nav links, forms, and other content for toggling -->
           <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <div style="">
              <span><b>Logged in as: </b><%= @current_user %></span><br/>
              <%= link_to "Logout",  logout_path %>
            </li>
          </div>
         

        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    <!--EOF Navigation -->



  </div>



  <% else %>
  <div class="col-sm-6">
    <div class="logo" style="width:45% !important;"> <%= link_to (image_tag("vm-logo.jpg")), "/", :id => "logo" %>
    </div>
  </div>
</div>
</div>
<% end %>




</header>
