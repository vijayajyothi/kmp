<div class="col-sm-12">
    <div class="form-search col-sm-4">
      <h2>Projects</h2></div>
      <div class="form-search col-sm-4" style="margin-top:20px;">
        <div class="input-append">

          <%= form_tag projects_path, :method => :get, :remote=> true do %>
          <%= text_field_tag :search, params[:search],:class=>"span2 search-query" ,:style=>"height:31px;border-radius:14px 0 0 14px; margin-right:-10px;", :placeholder =>"Search By Project"%>
          <%= submit_tag "Search", :name => nil, :class=>"btn", :style=>"height:32px; border-radius:0 14px 14px 0;" %>
          <% end %>
        </div>
      </div>
    </div>
<%= link_to 'New Project', new_project_path, :remote=>true %>
<table  class="table table-striped tablesorter">
  <tr>
    <th>Name</th>
    <th>Team</th>
    <th>Other</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.name %></td>
    <td><%= project.team %></td>
    <td><%= project.other %></td>
    <td><%= link_to 'Show', project, :remote=>true %></td>
    <td><%= link_to 'Edit', edit_project_path(project), :remote=>true %></td>
    <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
      <%= paginate @projects, :container => false, :remote=> true %>

