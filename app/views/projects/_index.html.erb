<%= link_to 'New Project', new_project_path, :remote=>true %>
<h1>Listing projects</h1>

<table  class="table table-striped tablesorter">
  <tr>
    <th>Name</th>
    <th>Team</th>
    <th>Other</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.name %></td>
    <td><%= project.team %></td>
    <td><%= project.other %></td>
    <td><%= link_to 'Show', project, :remote=>true %></td>
    <td><%= link_to 'Edit', edit_project_path(project), :remote=>true %></td>
    <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
      <%= paginate @projects, :container => false, :remote=> true %>

