<div class="col-sm-12">
    <div class="form-search col-sm-4">
      <h2>Tasks</h2></div>
      <div class="form-search col-sm-4" style="margin-top:20px;">
        <div class="input-append">

        
        </div>
      </div>
       <div class="col-sm-4"><%= link_to 'Add Task', new_project_path, :remote=>true, :class=>"btn btn-warning",:style=>"text-align:center;font-size:14px;" %>
       <span class="btn btn-warning"><%= link_to "Download as Excel", export_path(format: "xlsx") %></span></div>
      </div>

    </div>
<table  class="table table-hover tablesorter">
  <tr>
    <th style="text-align:center;font-size:19px;">Name</th>
    <th style="text-align:center;font-size:19px;">Date</th>
    <th style="text-align:center;font-size:19px;">Description</th>
    <th colspan=3 style="text-align:center;font-size:19px;"> Actions</th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td style="text-align:center;font-size:14px;"><%= project.name %></td>
    <td style="text-align:center;font-size:14px;"><%= project.created_at.strftime("%d-%m-%y") %></td>
    <td style="text-align:center;font-size:14px;"><%= project.other %></td>
    <td style="text-align:center;font-size:14px;"><%= link_to 'Show', project, :remote=>true, :class=>"btn btn-primary"  %></td>
    <td style="text-align:center;font-size:14px;"><%= link_to 'Edit', edit_project_path(project), :remote=>true, :class=>"btn btn-info"  %></td>
    <td style="text-align:center;font-size:14px;"><%= link_to 'Destroy', project,:remote=>true,  method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger"  %></td>
  </tr>
<% end %>
</table>

<br />
